<div class="container text-center">
  <div class="row">
    <div>
      <blockquote>
        <p><%= @question %></p>
        <footer><%= "- You" %></footer>
      </blockquote>
    </div>
    <div>
      <blockquote class="blockquote-reverse">
        <p><%= @answer %></p>
        <footer><%= "- Your coach" %></footer>
      </blockquote>
    </div>
    <button type="button" class="btn btn-default"><%= link_to "Ask a new question", ask_path %></button>
  </div>
</div>

